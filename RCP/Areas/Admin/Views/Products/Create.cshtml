@model DAO.Product
@using DAO
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/Admin/Content/product.css" rel="stylesheet" />
<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tạo sản phẩm mới</h4>
                    <form class="form-sample">
                        <p class="card-description">
                            Thông tin sản phẩm
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Loại sản phẩm</label>
                                    <div class="col-sm-9">
                                        <select class="form-control">
                                            @foreach (var item in (List<Category>)ViewBag.Category)
                                            {
                                                <option id="category-change" value="@item.ID">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Loại sản phẩm</label>
                                    <div class="col-sm-9">
                                        <select class="form-control">
                                            @foreach (var item in (List<Category>)ViewBag.Category)
                                            {
                                                <option id="category-change" value="@item.ID">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Loại sản phẩm</label>
                                    <div class="col-sm-9">
                                        <select class="form-control">
                                            @foreach (var item in (List<Category>)ViewBag.Category)
                                            {
                                                <option id="category-change" value="@item.ID">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row input-option">
                                    <label class="col-sm-3 col-form-label">Giá</label>
                                    <div class="col-sm-9 input-option">
                                        <input type="number" class="form-control" />
                                        <label class="note-input">VND</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Tên sản phẩm</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" required />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Hiển thị giá</label>
                                    <div class="col-sm-4">
                                        <div class="form-radio">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios1" value="" checked> Hiển thị
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="form-radio">
                                            <label class="form-check-label">
                                                <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios2" value="option2"> Không hiển thị
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Mô tả sản phẩm</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control inputstl" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Chọn ảnh</label>
                                    <div class="col-sm-9 upload-file-image">
                                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Tải ảnh lên">
                                        <button class="file-upload-browse btn btn-info" type="button">Chọn</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Giới thiệu</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control inputstl" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Vị trí</label>
                                    <div class="col-sm-9">
                                        <textarea class="form-control inputstl" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Khuyến mãi</label>
                                    <div class="col-sm-9">
                                        <input type="number" class="form-control inputstl" rows="5" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <p class="card-description">
                            English
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Address 1</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">State</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Address 2</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Postcode</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">City</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Country</label>
                                    <div class="col-sm-9">
                                        <select class="form-control">
                                            <option>America</option>
                                            <option>Italy</option>
                                            <option>Russia</option>
                                            <option>Britain</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Chọn ảnh</label>
                                    <div class="col-sm-9 upload-file-image">
                                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Tải ảnh lên">
                                        <button class="file-upload-browse btn btn-info" type="button">Chọn</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <button class="btn-save"><i class="glyphicon glyphicon-floppy-save"></i>Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div>
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</div>
<!-- content-wrapper ends -->